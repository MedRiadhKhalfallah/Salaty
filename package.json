{
  "name": "salaty",
  "version": "1.0.0",
  "description": "Salaty Islamic Prayer Times Desktop App",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never",
    "clean": "rm -rf dist",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.{js,html,css}\""
  },
  "author": {
    "name": "Yassin Daboussi",
    "email": "dev@salaty.app"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "38.2.2",
    "electron-builder": "24.13.3"
  },
  "build": {
    "appId": "com.yassindaboussi.salaty",
    "productName": "Salaty Islamic Prayer Times",
    "directories": {
      "output": "dist",
      "buildResources": "src/assets"
    },
    "files": [
      "src/**/*",
      "package.json",
      "settings.json"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "yassindaboussi",
        "repo": "Salaty"
      }
    ],
    "extraResources": [
      "src/assets/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/icons/app_icon.ico",
      "artifactName": "Salaty-Islamic-Prayer-Times-Setup.exe"
    },
    "mac": {
      "target": "dmg",
      "icon": "src/assets/icons/icon.icns"
    },
    "linux": {
      "target": [
        "tar.gz"
      ],
      "icon": "src/assets/icons/app_icon.png",
      "category": "Utility",
      "maintainer": "Yassin Daboussi <dev@salaty.app>",
      "artifactName": "${productName}-linux-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "include": "src/assets/installer.nsh"
    }
  },
  "dependencies": {
    "electron-updater": "^6.7.3",
    "howler": "^2.2.4",
    "leaflet": "^1.9.4",
    "salaty-qibla-map": "^1.0.2",
    "tom-select": "^2.4.3"
  }
}